{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with cl.exe",
      "type": "shell",
      "command": "${workspaceFolder}\\build.bat",
      "args": [
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
